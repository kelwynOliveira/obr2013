thread main
  precedes play_music, run_motors
endt

thread play_music
play_music_forever:
  PlayTone(TONE_C5,500)
  wait 500
  PlayTone(TONE_D5,500)
  wait 500
  PlayTone(TONE_E5,500)
  wait 500
  PlayTone(TONE_D5,500)
  wait 500
  jmp play_music_forever
endt

thread run_motors
run_motors_forever:
  OnFwd(OUT_BC,75)
  wait 300
  OnRev(OUT_BC,75)
  wait 300
  jmp run_motors_forever
endt

