#define MOVE_TIME  1000
#define SPEED       100
#define DECREMENT    50

dseg segment
  Speed byte
  wRandom byte
dseg ends

thread main
  set Speed SPEED
  OnFwd(OUT_BC, Speed)
  wait MOVE_TIME
  Random(wRandom,30)
  add wRandom, wRandom, 10
  sub Speed, Speed, wRandom
  OnRev(OUT_BC, Speed)
  wait MOVE_TIME
  Off(OUT_BC)
  exit
endt

