dseg segment
  Switch sword 0
dseg ends

thread main
  SetSensorType(IN_1,IN_TYPE_SWITCH)
  SetSensorMode(IN_1,IN_MODE_BOOLEAN)
  ResetSensor(IN_1)
  OnFwd(OUT_BC,100)

CheckSensor:
  ReadSensor(IN_1,Switch)
  brtst EQ, CheckSensor, Switch
  OnRev(OUT_BC,100)
  wait 300
  OnFwd(OUT_B,100)
  wait 300
  OnFwd(OUT_BC,100)
  jmp CheckSensor

endt

