dseg segment
  small typedef byte // 8 bits
  medium typedef word // 16 bits
  big typedef dword // 32 bits

  MySmall small
  MyMedium medium
  MyBig big
dseg ends

thread main
  set MySmall, 65535
  add MySmall, MySmall, 65535
  set MyMedium, 65535
  add MyMedium, MyMedium, 65535
  set MyBig, 65535
  add MyBig, MyBig, 65535

  NumOut(0,20,MySmall) // displays 254
  NumOut(0,10,MyMedium) // displays 65534
  NumOut(0,0,MyBig) // displays 131070

  wait 1000
endt

